pipeline {
    agent any

    tools {
        maven 'maven-3.9.8'
        jdk 'openjdk-17'
    }

    options {
        skipStagesAfterUnstable()  // Evita etapas innecesarias si falla algo
        timestamps()               // Agrega timestamps al log
    }

    stages {
        stage('Clean Workspace') {
            steps {
                echo 'ğŸ§¹ Limpiando el directorio de trabajo...'
                cleanWs notFailBuild: true
            }
        }

        stage('Checkout') {
            steps {
                echo 'ğŸ”„ Haciendo checkout del repositorio...'
                git: 'https://github.com/eberssgarcia/ebcode-continuous-testing.git'
            }
        }

        stage('Restore Packages') {
            steps {
                echo 'ğŸ“¦ Restaurando paquetes (si aplica)...'
                // AquÃ­ puedes colocar comandos para dependencias si usas otro gestor
            }
        }

        stage('Build') {
            steps {
                echo 'ğŸ—ï¸ Compilando el proyecto...'
                sh 'mvn clean compile'
            }
        }

        stage('Run Tests') {
            steps {
                echo 'ğŸ§ª Ejecutando pruebas...'
                sh 'mvn test -Dcucumber.options="--tags @freerangetesters-02"'
            }
        }

        stage('Post Cleanup') {
            steps {
                echo 'ğŸ§¹ Limpieza post-ejecuciÃ³n (si aplica)...'
            }
        }
    }

    post {
        success {
            echo 'âœ… Pipeline completado con Ã©xito.'
        }
        failure {
            echo 'âŒ FallÃ³ el pipeline.'
        }
        always {
            echo 'ğŸ“‹ Pipeline finalizado.'
        }
    }
}
