pipeline {
    agent any

    tools {
        maven 'maven-3.9.8'
        jdk 'openjdk-17'
    }

    options {
        timestamps()
        skipStagesAfterUnstable()
    }

    stages {
        stage('Clean') {
            steps {
                cleanWs notFailBuild: true
                echo 'Limpiando el workspace...'
            }
        }

        stage('Checkout') {
            steps {
                git url: 'https://github.com/eberssgarcia/ebcode-continuous-testing.git', branch: 'develop'
                echo 'Código clonado correctamente.'
            }
        }

        stage('Build and Test') {
            steps {
                echo 'Compilando y ejecutando pruebas...'
                sh 'mvn clean test -Dcucumber.options="--tags @freerangetesters-02"'
            }
        }

        stage('Final Result') {
            steps {
                echo 'Pipeline finalizado.'
            }
        }
    }

    post {
        success {
            echo '¡Todo OK!'
        }
        failure {
            echo 'Algo falló :('
        }
        always {
            echo 'Terminó la ejecución del pipeline.'
        }
    }
}
